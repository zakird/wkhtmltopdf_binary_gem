require 'rbconfig'

suffix = case RbConfig::CONFIG['host_os']
when /linux/
  (RbConfig::CONFIG['host_cpu'] == 'x86_64') ? 'linux_amd64' : 'linux_x86'
when /darwin/
  'darwin_x86'
else
  raise "Invalid platform. Must be running on linux or intel-based Mac OS."
end

system *$*.unshift("#{__FILE__}_#{suffix}")
